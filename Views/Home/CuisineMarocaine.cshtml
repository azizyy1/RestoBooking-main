@{
    ViewData["Title"] = "Cuisine Marocaine";
}

<section class="cuisine-hero" style="--hero-bg: url('https://images.unsplash.com/photo-1515003197210-e0cd71810b5f?auto=format&fit=crop&w=1600&q=80');">
    <div class="cuisine-hero-overlay"></div>
    <div class="container position-relative">
        <p class="cuisine-badge">Signature Maroc</p>
        <h1 class="cuisine-title">L'Art de la Cuisine Marocaine</h1>
        <p class="cuisine-lead">Un voyage sensoriel entre épices, raffinement et hospitalité.</p>
    </div>
</section>

<section class="cuisine-menu container">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="menu-card">
                <p class="menu-course">Entrées</p>
                <h3 class="menu-heading">Découverte parfumée</h3>
                <ul class="menu-list">
                    <li><span>Briouates au poulet et amandes</span><strong>89 MAD</strong></li>
                    <li><span>Zaalouk fumé à l'huile d'olive</span><strong>69 MAD</strong></li>
                    <li><span>Harira traditionnelle aux dattes</span><strong>65 MAD</strong></li>
                </ul>
            </div>
        </div>
        <div class="col-md-4">
            <div class="menu-card">
                <p class="menu-course">Plats signatures</p>
                <h3 class="menu-heading">Générosité & épices</h3>
                <ul class="menu-list">
                    <li><span>Tajine d'agneau aux pruneaux</span><strong>189 MAD</strong></li>
                    <li><span>Couscous royal à 7 légumes</span><strong>175 MAD</strong></li>
                    <li><span>Pastilla de la mer safranée</span><strong>165 MAD</strong></li>
                </ul>
            </div>
        </div>
        <div class="col-md-4">
            <div class="menu-card">
                <p class="menu-course">Douceurs</p>
                <h3 class="menu-heading">Gourmandises berbères</h3>
                <ul class="menu-list">
                    <li><span>Corne de gazelle maison</span><strong>55 MAD</strong></li>
                    <li><span>Pastilla au lait fleur d'oranger</span><strong>60 MAD</strong></li>
                    <li><span>Thé à la menthe & pignons</span><strong>40 MAD</strong></li>
                </ul>
            </div>
        </div>
    </div>
    <p class="menu-note">Recettes préparées dans la pure tradition marocaine avec des produits locaux sélectionnés.</p>
</section>