@page
@model LogoutModel
@{
    ViewData["Title"] = "Déconnexion";
}

<section class="auth-shell">
    <div class="auth-overlay"></div>
    <div class="container">
        <div class="row g-4 align-items-center">
            <div class="col-lg-5">
                <div class="auth-highlight">
                    <div class="auth-badge"><i class="bi bi-shield-lock"></i> Sécurité</div>
                    <h3>Terminer votre session</h3>
                    <p>Vous êtes sur le point de quitter votre espace RestoBooking. Vos données restent protégées et
                        vous pourrez vous reconnecter à tout moment.</p>
                    <div>
                        <div class="auth-chip"><i class="bi bi-clock-history"></i> Session courte</div>
                        <div class="auth-chip"><i class="bi bi-phone"></i> Reconnexion mobile</div>
                        <div class="auth-chip"><i class="bi bi-chat"></i> Assistance 24/7</div>
                    </div>
                    <div class="auth-meta">Pensez à sauvegarder vos modifications avant de vous déconnecter.</div>
                </div>
            </div>

            <div class="col-lg-5 ms-lg-auto col-md-8">
                <div class="auth-card shadow-lg text-center">
                    <div class="auth-badge">Sécurité</div>
                    <h1 class="auth-title">Vous déconnecter ?</h1>
                    <p class="auth-subtitle">En vous déconnectant, vous quitterez votre espace client RestoBooking.</p>

                    @if (TempData["StatusMessage"] is string status && !string.IsNullOrEmpty(status))
                    {
                        <div class="alert alert-success" role="alert">@status</div>
                    }

                    <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                        <button type="submit" class="btn btn-gold w-100 mb-3">Confirmer la déconnexion</button>
                    </form>
                    <a class="btn btn-outline-gold w-100 mb-2" asp-controller="Home" asp-action="Index">Revenir à
                        l'accueil</a>
                    <div class="auth-meta">Besoin d'aide ? Contactez-nous depuis la page Profil.</div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}