@page
@model LoginModel
@{
    ViewData["Title"] = "Connexion";
}

<section class="auth-wrapper">
    <div class="auth-overlay"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="auth-card shadow-lg">
                    <div class="auth-badge">Bienvenue</div>
                    <h1 class="auth-title">Connexion</h1>
                    <p class="auth-subtitle">Accédez à votre compte RestoBooking pour gérer vos réservations.</p>

                    <form id="account" method="post" class="mt-4" asp-route-returnUrl="@Model.ReturnUrl">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Adresse e-mail</label>
                            <input asp-for="Input.Email" class="form-control auth-input" autocomplete="username"
                                aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">Mot de passe</label>
                            <div class="input-group">
                                <span class="input-group-text bg-transparent text-light"><i
                                        class="bi bi-shield-lock"></i></span>
                                <input asp-for="Input.Password" class="form-control auth-input"
                                    autocomplete="current-password" aria-required="true" />
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label" asp-for="Input.RememberMe">Se souvenir de moi</label>
                            </div>
                            <a class="auth-link" asp-page="./ForgotPassword">Mot de passe oublié ?</a>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-gold w-100">Se connecter</button>
                    </form>

                    <div class="auth-footer text-center mt-4">
                        <span>Pas encore de compte ?</span>
                        <a class="auth-link" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Créer un
                            compte</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        .auth-wrapper {
            position: relative;
            min-height: calc(100vh - 140px);
            display: flex;
            align-items: center;
            padding: 140px 0 100px;
            color: #eaeaea;
            background: linear-gradient(180deg, rgba(10, 10, 12, 0.92) 0%, #050508 100%);
        }

        .auth-overlay {
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at 20% 20%, rgba(201, 176, 122, 0.10), transparent 30%),
                radial-gradient(circle at 80% 0%, rgba(255, 255, 255, 0.08), transparent 24%);
            pointer-events: none;
        }

        .auth-card {
            position: relative;
            background: rgba(15, 15, 20, 0.8);
            border: 1px solid rgba(255, 255, 255, 0.06);
            border-radius: 18px;
            padding: 32px 30px;
            overflow: hidden;
        }

        .auth-card::before {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(145deg, rgba(245, 166, 35, 0.08), transparent 70%);
            z-index: 0;
        }

        .auth-card>* {
            position: relative;
            z-index: 1;
        }

        .auth-badge {
            display: inline-block;
            padding: 0.35rem 0.85rem;
            background: rgba(245, 166, 35, 0.16);
            border: 1px solid rgba(245, 166, 35, 0.45);
            border-radius: 999px;
            text-transform: uppercase;
            letter-spacing: 0.15em;
            font-size: 0.75rem;
            color: #f7d7a2;
            margin-bottom: 0.75rem;
        }

        .auth-title {
            font-size: 2rem;
            font-weight: 600;
            margin-bottom: 0.35rem;
            letter-spacing: 0.03em;
        }

        .auth-subtitle {
            color: #c1c1c1;
            margin-bottom: 1.2rem;
        }

        .auth-input {
            background: rgba(255, 255, 255, 0.04);
            border: 1px solid rgba(255, 255, 255, 0.08);
            color: #fff;
        }

        .auth-input:focus {
            background: rgba(255, 255, 255, 0.06);
            border-color: #f5a623;
            box-shadow: 0 0 0 0.15rem rgba(245, 166, 35, 0.35);
        }

        .auth-link {
            color: #f5a623;
            text-decoration: none;
            font-weight: 600;
        }

        .auth-link:hover {
            color: #ffb94f;
        }

        .btn-gold {
            background: linear-gradient(90deg, #f5a623, #c9b07a);
            border: none;
            color: #0d0d11;
            font-weight: 700;
            letter-spacing: 0.05em;
            padding: 0.85rem 1.2rem;
            border-radius: 12px;
        }

        .btn-gold:hover {
            background: linear-gradient(90deg, #ffb94f, #d9c28b);
            box-shadow: 0 12px 30px rgba(245, 166, 35, 0.25);
        }

        .form-check-input {
            border-radius: 0.35rem;
        }

        .auth-footer {
            color: #c1c1c1;
        }

        @@media (max-width: 768px) {
            .auth-card {
                padding: 28px 24px;
            }

            .auth-wrapper {
                padding-top: 120px;
            }
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}