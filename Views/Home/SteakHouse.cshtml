@{
    ViewData["Title"] = "Steakhouse";
}

<section class="cuisine-hero" style="--hero-bg: url('https://images.unsplash.com/photo-1544025162-d76694265947?auto=format&fit=crop&w=1600&q=80');">
    <div class="cuisine-hero-overlay"></div>
    <div class="container position-relative">
        <p class="cuisine-badge">Prime Cuts</p>
        <h1 class="cuisine-title">Le Steakhouse d’Exception</h1>
        <p class="cuisine-lead">Viandes premium, cuisson parfaite & accords raffinés.</p>
    </div>
</section>

<section class="cuisine-menu container">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="menu-card">
                <p class="menu-course">Entrées grillades</p>
                <h3 class="menu-heading">Préambule fumé</h3>
                <ul class="menu-list">
                    <li><span>Tartare de bœuf maturé</span><strong>18 €</strong></li>
                    <li><span>Camembert rôti au miel</span><strong>14 €</strong></li>
                    <li><span>Asperges grillées & copeaux de parmesan</span><strong>16 €</strong></li>
                </ul>
            </div>
        </div>
        <div class="col-md-4">
            <div class="menu-card">
                <p class="menu-course">Pièces de bœuf</p>
                <h3 class="menu-heading">Cuissons au feu de bois</h3>
                <ul class="menu-list">
                    <li><span>Côte de bœuf Angus 1kg à partager</span><strong>69 €</strong></li>
                    <li><span>Filet mignon Rossini</span><strong>34 €</strong></li>
                    <li><span>Tomahawk Black Angus</span><strong>59 €</strong></li>
                </ul>
            </div>
        </div>
        <div class="col-md-4">
            <div class="menu-card">
                <p class="menu-course">Accompagnements</p>
                <h3 class="menu-heading">Signature grill</h3>
                <ul class="menu-list">
                    <li><span>Frites de patate douce & paprika fumé</span><strong>7 €</strong></li>
                    <li><span>Purée truffée à l'huile de noisette</span><strong>8 €</strong></li>
                    <li><span>Légumes braisés aux herbes</span><strong>7 €</strong></li>
                </ul>
            </div>
        </div>
    </div>
    <p class="menu-note">Sélection de viandes maturées, grillées à la flamme pour une expérience de steakhouse moderne.</p>
</section>