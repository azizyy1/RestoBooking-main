@{
    ViewData["Title"] = "Cuisine Italienne";
}

<section class="cuisine-hero" style="--hero-bg: url('https://images.unsplash.com/photo-1529006557810-274b9b2fc783?auto=format&fit=crop&w=1600&q=80');">
    <div class="cuisine-hero-overlay"></div>
    <div class="container position-relative">
        <p class="cuisine-badge">Alta Cucina</p>
        <h1 class="cuisine-title">L'Excellence de la Cuisine Italienne</h1>
        <p class="cuisine-lead">Authenticité, produits nobles et élégance contemporaine.</p>
    </div>
</section>

<section class="cuisine-menu container">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="menu-card">
                <p class="menu-course">Antipasti</p>
                <h3 class="menu-heading">Fraîcheur & partage</h3>
                <ul class="menu-list">
                    <li><span>Burrata crémeuse & pesto</span><strong>14 €</strong></li>
                    <li><span>Bruschetta aux tomates confites</span><strong>11 €</strong></li>
                    <li><span>Carpaccio de bœuf au parmesan</span><strong>15 €</strong></li>
                </ul>
            </div>
        </div>
        <div class="col-md-4">
            <div class="menu-card">
                <p class="menu-course">Primi & Secondi</p>
                <h3 class="menu-heading">Savoir-faire italien</h3>
                <ul class="menu-list">
                    <li><span>Risotto au safran et pecorino</span><strong>21 €</strong></li>
                    <li><span>Tagliatelle truffe noire & crème</span><strong>24 €</strong></li>
                    <li><span>Osso buco gremolata</span><strong>26 €</strong></li>
                </ul>
            </div>
        </div>
        <div class="col-md-4">
            <div class="menu-card">
                <p class="menu-course">Dolci</p>
                <h3 class="menu-heading">Notes sucrées</h3>
                <ul class="menu-list">
                    <li><span>Tiramisu espresso</span><strong>9 €</strong></li>
                    <li><span>Panna cotta vanille & coulis rouge</span><strong>8 €</strong></li>
                    <li><span>Gelato pistache artisanale</span><strong>7 €</strong></li>
                </ul>
            </div>
        </div>
    </div>
    <p class="menu-note">Une sélection inspirée des trattorias modernes : simplicité, fraîcheur et excellence des produits.</p>
</section>