@model GalleryViewModel
@{
    ViewData["Title"] = "Accueil";
}

<div class="hero-wrapper">
    <video class="hero-video" autoplay muted loop playsinline>
        <source src="~/videos/bar-background.mp4" type="video/mp4" />
        <!-- Mets ton propre fichier vidéo dans wwwroot/videos et adapte le chemin -->
    </video>

    <div class="hero-overlay"></div>

    <div class="hero-content">
        <h1 class="hero-title">Bienvenue chez RestoBooking</h1>
        <p class="hero-subtitle">Réservez votre table dans une ambiance chic et chaleureuse.</p>
        <a class="btn btn-primary btn-lg hero-btn" asp-controller="Reservation" asp-action="Create">
            Réserver une table
        </a>
    </div>
</div>

<section class="restaurant-overview">
    <div class="section-container">
        <div class="overview-header">
            <p class="overview-kicker">Le Restaurant</p>
            <h2 class="overview-title">Une expérience pensée pour les amoureux de la bonne cuisine</h2>
            <p class="overview-description">
                Surplombant Casablanca, notre rooftop mêle lumière naturelle, touches végétales et design contemporain.
                Une brigade passionnée prépare grillades, mezzés et douceurs maison pour des moments à partager, du
                déjeuner aux soirées animées.
            </p>
        </div>

        <div class="overview-grid">
            <div class="overview-card">
                <div class="overview-step">01</div>
                <h3 class="overview-heading">Grill traditionnel, touche moderne</h3>
                <p class="overview-text">
                    Paragraphe. Cliquez ici pour le modifier et ajouter votre propre texte. C'est l'espace idéal pour
                    raconter
                    une histoire et vous présenter à vos visiteurs.
                </p>
            </div>
            <div class="overview-card">
                <div class="overview-step">02</div>
                <h3 class="overview-heading">Servir les meilleures viandes</h3>
                <p class="overview-text">
                    Paragraphe. Cliquez ici pour le modifier et ajouter votre propre texte. C'est l'espace idéal pour
                    raconter
                    une histoire et vous présenter à vos visiteurs.
                </p>
            </div>
            <div class="overview-card">
                <div class="overview-step">03</div>
                <h3 class="overview-heading">Situé au cœur de la ville</h3>
                <p class="overview-text">
                    Paragraphe. Cliquez ici pour le modifier et ajouter votre propre texte. C'est l'espace idéal pour
                    raconter
                    une histoire et vous présenter à vos visiteurs.
                </p>
            </div>
        </div>
    </div>
</section>

<section class="contact-banner">
    <div class="contact-overlay"></div>
    <div class="container contact-banner__content">
        <div class="contact-banner__text">
            <p class="contact-banner__kicker">Prêt à échanger ?</p>
            <h2 class="contact-banner__title">Restaurant &amp; bar sur mesure, parlons de votre projet</h2>
            <p class="contact-banner__subtitle">
                Un évènement, une réservation spéciale ou une simple question ? Cliquez ci-dessous pour être redirigé
                vers notre page "Contactez-nous" et discuter avec notre équipe.
            </p>
            <a class="btn btn-primary btn-lg contact-banner__btn" asp-controller="Home" asp-action="Contact">
                Contactez-nous
            </a>
        </div>
    </div>
</section>

<section class="signature-cuisines" id="specialites">
    <div class="section-container">
        <div class="signature-header">
            <div>
                <p class="signature-kicker">Nos cuisines</p>
                <h2 class="signature-title">Des spécialités signatures à découvrir</h2>
                <p class="signature-subtitle">
                    Une invitation à voyager entre l'Orient, la Méditerranée et le savoir-faire du grill.
                    Chaque univers culinaire est préparé avec des produits d'exception et une maîtrise unique.
                </p>
            </div>
            <a class="btn btn-outline-gold signature-btn" asp-controller="Home" asp-action="Portfolio">
                Découvrir le portfolio
            </a>
        </div>

        <div class="signature-grid">
            <article class="signature-card">
                <div class="signature-icon">🇲🇦</div>
                <h3 class="signature-heading">Cuisine Marocaine</h3>
                <p class="signature-text">Tajines mijotés, méchoui délicat et pâtisseries aux notes d'amande et de fleur
                    d'oranger.</p>
                <span class="signature-tag">Épices & Douceurs</span>
            </article>
            <article class="signature-card">
                <div class="signature-icon">🇮🇹</div>
                <h3 class="signature-heading">Cuisine Italienne</h3>
                <p class="signature-text">Pâtes fraîches, burrata crémeuse et huiles parfumées : la dolce vita dans
                    chaque assiette.</p>
                <span class="signature-tag">Prodotti d'eccellenza</span>
            </article>
            <article class="signature-card">
                <div class="signature-icon">🥩</div>
                <h3 class="signature-heading">Steakhouse</h3>
                <p class="signature-text">Sélection de viandes premium, maturation maîtrisée et cuissons au feu vif pour
                    des saveurs fumées.</p>
                <span class="signature-tag">Grill signature</span>
            </article>
        </div>
    </div>
</section>

<section class="photo-gallery" id="galerie">
    <div class="container">
        <div class="gallery-header">
            <p class="gallery-kicker">Galerie</p>
            <h2 class="gallery-title">Moments à savourer</h2>
            <p class="gallery-subtitle">Une sélection de photos locales pour mettre en avant l'ambiance de votre
                restaurant.</p>
        </div>

        <div class="gallery-grid">
            @foreach (var image in Model.ImageUrls)
            {
                <div class="gallery-item">
                    <img src="@image" alt="Photo du restaurant" />
                </div>
            }
        </div>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}